<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.ciubex.tkconfig"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name="ro.ciubex.tkconfig.TKConfigApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ro.ciubex.tkconfig.activities.TKConfigActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ro.ciubex.tkconfig.activities.TkPreferences"
            android:label="@string/settings" />
        <activity
            android:name="ro.ciubex.tkconfig.activities.AboutActivity"
            android:label="@string/about" />
        <activity
            android:name="ro.ciubex.tkconfig.activities.LicenseActivity"
            android:label="@string/license" />
    </application>

</manifest>